# Admin Panel Security
# Prevent direct access to admin folder without proper authentication

# Deny access to all files by default
<FilesMatch ".*">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Allow only PHP files to be accessed
<FilesMatch "\.(php)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Prevent directory listing
Options -Indexes

# Protect sensitive files
<FilesMatch "^(config|includes)">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Custom error pages
ErrorDocument 403 login.php
ErrorDocument 404 login.php

# Security headers
<IfModule mod_headers.c>
    Header set X-Frame-Options "DENY"
    Header set X-Content-Type-Options "nosniff"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>
